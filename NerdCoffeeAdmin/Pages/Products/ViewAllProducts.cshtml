@page "/Products/ViewAllProducts"
@model NerdCoffeeAdmin.Pages.Products.ViewAllProductsModel
@{
}

<h1>Catálogo de Filmes</h1>
<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Short Description</th>
            <th>Editar</th>
            <th>Deletar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="~/images/menu/@item.ImageFileName" /></td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.ShortDescription</td>
                <td><a asp-page="EditProduct" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

@section RightFooter
{
    <img src="~/images/menu/bagel.png" />
}