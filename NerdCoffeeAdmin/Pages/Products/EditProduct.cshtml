@page "/Products/Edit/{id}"
@model NerdCoffeeAdmin.Pages.Products.EditProductModel
@{
}

<h1>Editar os Filmes</h1>
<hr />

<form method="post">
    <input type="hidden" asp-for="Product.Id" />

    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.ShortDescription"></label>
        <input asp-for="Product.ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" />
    </div>
   
    <div class="form-group">
        <label asp-for="Product.Category"></label>
        <input asp-for="Product.Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.ImageFileName"></label>
        <input asp-for="Product.ImageFileName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>